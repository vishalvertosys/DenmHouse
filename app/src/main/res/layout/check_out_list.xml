<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/checkOutImageView"
                android:layout_width="113dp"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/jean" />

            <TextView
                android:id="@+id/checkOutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/checkOutImageView"
                android:text="Something Good"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Type: "
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:layout_below="@+id/checkOutTitle"
                android:layout_toRightOf="@+id/checkOutImageView"
                android:id="@+id/typeLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="jean "
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/checkOutTitle"
                android:layout_toRightOf="@+id/typeLocal"
                android:id="@+id/typeRemote"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Product Code: "
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:layout_below="@+id/typeLocal"
                android:layout_toRightOf="@+id/checkOutImageView"
                android:id="@+id/productCodeLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="54878448 "
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/typeRemote"
                android:layout_toRightOf="@+id/productCodeLocal"
                android:id="@+id/productCodeRemote"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Price: "
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:layout_below="@+id/productCodeLocal"
                android:layout_toRightOf="@+id/checkOutImageView"
                android:id="@+id/priceLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="$555"
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/productCodeRemote"
                android:layout_toRightOf="@+id/priceLocal"
                android:id="@+id/priceRemote"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubTotal"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:textColor="#3D4A53"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:layout_below="@+id/priceLocal"
                android:layout_toRightOf="@+id/checkOutImageView"
                android:id="@+id/subtotalLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:text="$555"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/priceRemote"
                android:layout_toRightOf="@+id/subtotalLocal"
                android:id="@+id/subtotalremote"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>