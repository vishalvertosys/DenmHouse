<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/allProductTitleImage"
                android:layout_width="113dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/jean" />

            <TextView
                android:id="@+id/allProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/allProductTitleImage"
                android:text="Something Good"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/allProductTitle"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/allProductTitleImage"
                android:text="Today is my lucky day.I am making this app with the help of abhishek "
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/allProductNewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/allProductDescription"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/allProductTitleImage"
                android:text="$250"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/minusButton"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/allProductTitleImage"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/plus_minus_button_shape"
                android:padding="8dp"
                card_view:srcCompat="@drawable/minus_icon" />

            <TextView
                android:id="@+id/itemCount"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_below="@id/allProductTitleImage"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/minusButton"
                android:background="@drawable/edbg"
                android:gravity="center"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="#484545"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/plusButton"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_below="@+id/allProductTitleImage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/itemCount"
                android:background="@drawable/plus_minus_button_shape"
                android:padding="30dp"
                card_view:srcCompat="@drawable/plus_icon" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_below="@+id/allProductNewRate"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/plusButton"
                android:background="@drawable/add_button_shape"
                android:elevation="30dp"
                android:gravity="center"
                android:text=" +   ADD TO CART"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>