<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Something Good"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shoppingCartlTitleImage"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:textColor="#3D4A53"
                android:textAllCaps="false"
                android:id="@+id/shoppingCartlTitle"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Type: "
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:layout_below="@+id/shoppingCartlTitle"
                android:layout_toRightOf="@+id/shoppingCartlTitleImage"
                android:id="@+id/typeLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="jean "
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/shoppingCartlTitle"
                android:layout_toRightOf="@+id/typeLocal"
                android:id="@+id/typeRemote"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Product Code: "
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:layout_below="@+id/typeLocal"
                android:layout_toRightOf="@+id/shoppingCartlTitleImage"
                android:id="@+id/productCodeLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="54878448 "
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/typeRemote"
                android:layout_toRightOf="@+id/productCodeLocal"
                android:id="@+id/productCodeRemote"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Price: "
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:textColor="#3D4A53"
                android:layout_below="@+id/productCodeLocal"
                android:layout_toRightOf="@+id/shoppingCartlTitleImage"
                android:id="@+id/priceLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="$555"
                android:layout_marginLeft="2dp"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/productCodeRemote"
                android:layout_toRightOf="@+id/priceLocal"
                android:id="@+id/priceRemote"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="SubTotal"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:textColor="#3D4A53"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:layout_below="@+id/priceLocal"
                android:layout_toRightOf="@+id/shoppingCartlTitleImage"
                android:id="@+id/subtotalLocal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:text="$555"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#a79999"
                android:layout_below="@+id/priceRemote"
                android:layout_toRightOf="@+id/subtotalLocal"
                android:id="@+id/subtotalRemote"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                card_view:srcCompat="@drawable/minus_icon"
                android:layout_alignParentLeft="true"
                android:padding="8dp"
                android:background="@drawable/plus_minus_button_shape"
                android:id="@+id/minusButton"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/shoppingCartlTitleImage"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:text="3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#484545"
                android:background="@drawable/edbg"
                android:layout_below="@id/shoppingCartlTitleImage"
                android:id="@+id/itemCount"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/minusButton"
                />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="30dp"
                card_view:srcCompat="@drawable/plus_icon"
                android:background="@drawable/plus_minus_button_shape"
                android:id="@+id/plusButton"
                android:padding="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/itemCount"
                android:layout_below="@+id/shoppingCartlTitleImage"/>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:padding="12dp"
                android:id="@+id/removeButton"
                android:background="@drawable/cross_button_shape"
                android:src="@drawable/cross_icon"
                android:layout_marginRight="12dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="113dp"
                android:layout_height="120dp"
                android:src="@drawable/jean"
                android:scaleType="fitXY"
                android:id="@+id/shoppingCartlTitleImage"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>